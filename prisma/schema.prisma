// This is your Prisma schema file
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum EnrollmentStatus {
  ACTIVE
  DROPPED
  COMPLETED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum SessionType {
  REGULAR
  MAKEUP
  EXTRA
}

// USER & AUTHENTICATION

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     UserRole

  emailVerified       Boolean   @default(false)
  verificationToken   String?   @unique
  verificationExpires DateTime?

  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student?
  teacher Teacher?

  @@index([email])
  @@index([role])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

//  NEW: BATCH MODEL (Primary Entity)

model Batch {
  id         String @id @default(uuid())
  code       String @unique // "2P11", "2P12", "2P21"
  name       String // "2nd Year CSE - Division P11"
  year       String // "2nd Year" or "2025"
  department String // "Computer Science Engineering"

  // Optional metadata
  capacity  Int? // Maximum students
  classRoom String? // Default classroom location

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  students           Student[] // One-to-Many: One batch has many students
  subjectEnrollments SubjectEnrollment[] // Many-to-Many with subjects
  timetableEntries   TimetableEntry[] // Batch owns its timetable

  @@index([code])
  @@index([department])
  @@map("batches")
}

// TEACHER & STUDENT PROFILES
model Teacher {
  id         String  @id @default(uuid())
  userId     String  @unique
  employeeId String  @unique
  firstName  String
  lastName   String
  department String?
  phone      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjectEnrollments SubjectEnrollment[] //  FIXED: Subject-batch teaching assignments
  attendanceSessions AttendanceSession[] //  FIXED: Attendance sessions conducted

  @@index([employeeId])
  @@index([userId])
  @@map("teachers")
}

model Student {
  id        String  @id @default(uuid())
  userId    String  @unique
  studentId String  @unique // Roll number like "2100123"
  firstName String
  lastName  String
  phone     String?

  batchId String? //  FIXED: Optional - can be assigned later

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  batch             Batch?             @relation(fields: [batchId], references: [id], onDelete: Restrict) //  FIXED: Optional relation
  attendanceRecords AttendanceRecord[]
  fcmTokens         FCMToken[]

  @@index([studentId])
  @@index([userId])
  @@index([batchId])
  @@map("students")
}


// SUBJECT MODEL (Independent of Batch)
model Subject {
  id         String @id @default(uuid())
  code       String @unique // "CS301", "CS302"
  name       String // "Data Structures"
  semester   String // "Odd Semester 2025-26"
  department String // "Computer Science Engineering"
  credits    Int? // Academic credits (e.g., 4)

  // REMOVED: teacherId - subjects are now shared resources
  // Teachers are assigned via SubjectEnrollment

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //  REMOVED: Direct teacher relation
  subjectEnrollments SubjectEnrollment[] // Many-to-Many with batches

  @@index([code])
  @@map("subjects")
}

// SUBJECT ENROLLMENT (Many-to-Many Pivot Table)
model SubjectEnrollment {
  id        String @id @default(uuid())
  subjectId String
  batchId   String
  teacherId String //  FIXED: Added teacher assignment

  // Optional metadata
  semester String? // "Odd 2025-26"
  status   EnrollmentStatus @default(ACTIVE) // Track enrollment status
  room     String? // Default room for this subject-batch

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subject            Subject             @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  batch              Batch               @relation(fields: [batchId], references: [id], onDelete: Cascade)
  teacher            Teacher             @relation(fields: [teacherId], references: [id], onDelete: Cascade) //  FIXED: Teacher relation
  attendanceSessions AttendanceSession[] // Sessions for this subject-batch combo
  timetableEntries   TimetableEntry[] // Schedule for this subject-batch combo

  // One enrollment per subject-batch combination
  @@unique([subjectId, batchId])
  @@index([subjectId])
  @@index([batchId])
  @@index([teacherId]) //  FIXED: Index for teacher queries
  @@map("subject_enrollments")
}

// TIMETABLE (Belongs to Batch + SubjectEnrollment)
model TimetableEntry {
  id                  String @id @default(uuid())
  batchId             String //  Timetable entry for which batch
  subjectEnrollmentId String //  Which subject is being taught

  dayOfWeek String // "MONDAY", "TUESDAY", etc.
  startTime String // "09:00:00"
  endTime   String // "10:00:00"

  // Optional details
  classRoom String? // Can override batch default
  type      String? // "Lecture", "Lab", "Tutorial"
  professor String? // Professor name/code

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  batch             Batch             @relation(fields: [batchId], references: [id], onDelete: Cascade)
  subjectEnrollment SubjectEnrollment @relation(fields: [subjectEnrollmentId], references: [id], onDelete: Cascade)

  // Prevent duplicate slots
  @@unique([batchId, dayOfWeek, startTime])
  @@index([batchId])
  @@index([subjectEnrollmentId])
  @@index([dayOfWeek])
  @@map("timetable_entries")
}

// ATTENDANCE (Per SubjectEnrollment)
model AttendanceSession {
  id                  String      @id @default(uuid())
  subjectEnrollmentId String //  Attendance for which subject-batch combo
  teacherId           String // Who took attendance
  date                DateTime    @db.Date
  startTime           String // "09:00:00"
  endTime             String // "10:00:00"
  type                SessionType @default(REGULAR)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subjectEnrollment SubjectEnrollment  @relation(fields: [subjectEnrollmentId], references: [id], onDelete: Cascade)
  teacher           Teacher            @relation(fields: [teacherId], references: [id], onDelete: Cascade) //  FIXED: Teacher relation
  records           AttendanceRecord[]
  edits             AttendanceEdit[]

  @@index([subjectEnrollmentId])
  @@index([teacherId])
  @@index([date])
  @@map("attendance_sessions")
}

model AttendanceRecord {
  id        String           @id @default(uuid())
  sessionId String
  studentId String
  status    AttendanceStatus @default(PRESENT)
  markedAt  DateTime         @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student Student           @relation(fields: [studentId], references: [id], onDelete: Cascade)
  edits   AttendanceEdit[]

  @@unique([sessionId, studentId])
  @@index([sessionId])
  @@index([studentId])
  @@index([status])
  @@map("attendance_records")
}

model AttendanceEdit {
  id        String           @id @default(uuid())
  recordId  String
  sessionId String
  editedBy  String // Teacher userId
  oldStatus AttendanceStatus
  newStatus AttendanceStatus
  reason    String

  createdAt DateTime @default(now())

  record  AttendanceRecord  @relation(fields: [recordId], references: [id], onDelete: Cascade)
  session AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([recordId])
  @@index([sessionId])
  @@map("attendance_edits")
}

// SUPPORTING MODELS
model FCMToken {
  id        String  @id @default(uuid())
  studentId String
  token     String  @unique
  deviceId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@map("fcm_tokens")
}
